{
  "manifest_version": 3,
  "name": "X Bookmark Analyzer",
  "version": "1.0.0",
  "description": "Analyze your X/Twitter bookmarks with AI to generate topics, summaries, and hashtags",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads",
    "contextMenus"
  ],
  "optional_permissions": [
    "tabs"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "https://api.anthropic.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Analyze X Bookmarks",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://x.com/*", "https://twitter.com/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://x.com https://twitter.com https://generativelanguage.googleapis.com"
  },
  "update_url": "https://clients2.google.com/service/update2/crx"
}